{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <h1>Administrace kategorií</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('category_show', {'id': category.id}) }}">Detail</a>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">Upravit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_new') }}">Vytvořit novou kategorii</a>
    <a href="{{ path('admin') }}"class="btn btn-secondary">Zpět do administrace</a>

{% endblock %}
