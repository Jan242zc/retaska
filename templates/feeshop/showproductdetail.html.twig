{% extends 'base_eshop.html.twig' %}
{% block title %} {% endblock %}
{% block body %} 
    <div class = "container">
        <br>
        <h5> {{ product.name }} </h5>
        <br>
        <div class = "row">
            <div class = "col-6">
                {{product.description}}
            </div>
            <div class = "col-1">
            </div>
            <div class = "col-3">
                Kusů skladem
            </div>
            <div class = "col-2">
                {{product.stock}}
            </div>
        </div>
        <div class = "row">
            <div class = "col-6">
                
            </div>
            <div class = "col-1">
            </div>
            <div class = "col-3">
                Cena
            </div>
            <div class = "col-2">
                {{product.price}} Kč
            </div>
        </div>
        <div class = "row">
            <div class = "col-6">
            </div>
            <div class = "col-1">
            </div>
            <div class = "col-5">
                <a class="btn btn-primary" href="{{ path('basket_add', {product: product.id})}}" role="button">Přidat do košíku</a>
            </div>
        </div>
    <a href="{{ path('showproducts', {category: product.category.id})}}">Zpět na výpis produktů v této kategorii</a>
    </div>
    <br>
{% endblock %}